/* pages/homework/index.wxss */
.page {
  min-height: 100vh;
  background-color: #FAFAFA;
}

.navbar {
  display: flex;
  justify-content: space-around;
  background: #fff;
  padding-bottom: 20rpx;
  padding-top: 10rpx;
  margin-bottom: 20rpx;
}

.navbar .item {
  position: relative;
  text-align: center;
  line-height: 60rpx;
}

.navbar .item.active {
  color: rgba(212, 47, 47, 1);
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: rgba(212, 47, 47, 1);
}
.list .item {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  width: 100vw;
  height: 150rpx;
  background-color: #fff;
  padding: 0 50rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
}
.list .item .left {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 80%;
  padding: 20rpx 0;
}
.list .item .time {
  font-size: 12px;
  color: rgba(48, 50, 63, 0.51);
}
.list .item .right {
  color: #578EF8;
  margin: auto 0;
}
.list .item .score {
  color: #F57329;
}