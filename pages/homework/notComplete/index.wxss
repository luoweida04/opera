/* pages/homework/notComplete/index.wxss */
.page {
  padding: 0;
}
image {
  width: 100%;
  height: 350rpx;
  background-color: #ccc;
  margin-bottom: 20rpx;
}
.box {
  box-sizing: border-box;
  width: 100%;
  padding: 30rpx;
}
.box .title {
  font-weight: bold;
  margin-bottom: 20rpx;
}
.box .content {
  width: calc(100vw - 60rpx);
  font-size: 14px;
  color: rgba(0, 0, 0, 0.60);
  line-height: 40rpx;
}
.bottom {
  box-sizing: border-box;
  position: fixed;
  display: flex;
  justify-content: space-between;
  bottom: 0;
  width: 100vw;
  height: 170rpx;
  background-color: #fff;
  padding: 0 30rpx;
}
.bottom .btn {
  width: 45%;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  margin: auto;
  margin-top: 40rpx;
}

.bottom .sing {
  color: #C0110C;
  background-color: #fff;
  border: 1px solid #C0110C;
}
.bottom .submit {
  color: #fff;
  background: linear-gradient(to right, rgba(192, 17, 12, 1), rgba(235, 74, 64, 1));
}