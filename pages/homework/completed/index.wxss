/* pages/homework/completed/index.wxss */
.page {
  height: 100vh;
  padding: 0;
  background-color: #FAFAFA;
}

.headImg {
  width: 100%;
  height: 350rpx;
  background-color: #ccc;
  margin-bottom: 20rpx;
}

.navBar {
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  width: 100vw;
  height: 100rpx;
  background-color: #fff;
  box-shadow: 0 4px 4px 0 rgba(0, 0, 0, 0.05);
  padding-top: 10rpx;
  margin-bottom: 10rpx;
}

.navBar view {
  font-size: 20px;
}

.navBar .active {
  position: relative;
  height: 60rpx;
  color: #D42F2F;
}

.navBar .active::after {
  position: absolute;
  content: "";
  width: 100%;
  height: 4px;
  background-color: #D42F2F;
  left: 0;
  bottom: 0rpx;
}

.scoreList {
  width: 100%;
  /* max-height: 800rpx; */
  max-height: calc(100vh - 800rpx);
  overflow: scroll;
}

.scoreList image {
  display: block;
  width: 70%;
  height: 300rpx;
  margin: auto;
  margin-top: 70rpx;
}

.scoreList text {
  display: block;
  width: 80px;
  text-align: center;
  font-size: 20px;
  color: rgba(48, 50, 63, 0.51);
  margin: auto;
}

.scoreList .item {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  width: 100vw;
  height: 150rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
  padding: 0 40rpx;
  padding-top: 10rpx;
}

.scoreList .item .left .teacher {
  color: rgba(0, 0, 0, 0.80);
}

.scoreList .item .left .comment {
  word-break: break-all;
  display: -webkit-box;
  width: 88%;
  font-size: 14px;
  color: rgba(48, 50, 63, 0.51);
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 10rpx;
  overflow: hidden;
}

.scoreList .item .score {
  font-size: 26px;
  color: #F57329;
  line-height: 140rpx;
}

.introduction {
  /* height: 800rpx; */
  height: calc(100vh - 900rpx);
  overflow: scroll;
}

.introduction .box {
  box-sizing: border-box;
  width: 100%;
  padding: 30rpx;
}

.introduction .box .title {
  font-weight: bold;
  margin-bottom: 20rpx;
}

.introduction .box .content {
  width: calc(100vw - 60rpx);
  font-size: 14px;
  color: rgba(0, 0, 0, 0.60);
  line-height: 40rpx;
}

.bottom {
  box-sizing: border-box;
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  bottom: 0;
  width: 100vw;
  height: 270rpx;
  background-color: #fff;
  padding: 0 40rpx;
}

.bottom .two {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin: 0 auto;
}

.bottom .two .btn {
  width: 40%;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  margin: auto;
  margin-top: 40rpx;
}

.bottom .two .look {
  color: #C0110C;
  background-color: #fff;
  border: 1px solid #C0110C;
}

.bottom .two .resubmit {
  color: #fff;
  background: linear-gradient(to right, rgba(192, 17, 12, 1), rgba(235, 74, 64, 1));
}

.bottom .sing {
  width: 90%;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  margin: auto;
  margin-top: 40rpx;
  color: #fff;
  background: linear-gradient(to right, rgba(192, 17, 12, 1), rgba(235, 74, 64, 1));
}

.bottom2 {
  box-sizing: border-box;
  position: fixed;
  display: flex;
  justify-content: space-around;
  bottom: 0;
  width: 100vw;
  height: 170rpx;
  background-color: #fff;
  padding: 0 40rpx;
  box-shadow: 0 -4px 4px 0 rgba(0, 0, 0, 0.04);
}

.bottom2 .btn {
  width: 45%;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  margin: auto;
  margin-top: 40rpx;
}

.bottom2 .sing {
  color: #C0110C;
  background-color: #fff;
  border: 1px solid #C0110C;
}

.bottom2 .look {
  color: #fff;
  background: linear-gradient(to right, rgba(192, 17, 12, 1), rgba(235, 74, 64, 1));
}