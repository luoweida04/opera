/* pages/study/index.wxss */
/**index.wxss**/
.page {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #FAFAFA;
}

.navbar {
  display: flex;
  justify-content: space-around;
  background: #fff;
  padding-bottom: 20rpx;
  padding-top: 10rpx;
}

.navbar .item {
  position: relative;
  text-align: center;
  line-height: 60rpx;
}

.navbar .item.active {
  color: rgba(212, 47, 47, 1);
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: rgba(212, 47, 47, 1);
}

.tab {
  width: 100%;
}
.tab .videoList {
  display: flex;
  /* justify-content: space-around; */
  flex-wrap: wrap;
  flex-flow: wrap;
}
.tab .videoList .video {
  display: flex;
  flex-direction: column;
  width: 350rpx;
  height: 350rpx;
  margin-left: 17rpx;
  margin-top: 20rpx;
}
.tab .videoList .video .img {
  width: 100%;
  height: 280rpx;
  background-color: rgb(240, 240, 240);
}
.tab .videoList .video .title {
  width: 100%;
  height: 90rpx;
  text-align: center;
  background-color: #fff;
  padding-top: 10rpx;
}
