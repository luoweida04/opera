/* pages/study/oneVideo/index.wxss */
.page {
  width: 100%;
  height: 100vh;
  background-color: #fff;
}

.page .video {
  width: 100%;
  height: 380rpx;
  background-color: #ccc;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin: 5% 0 40rpx 5%;
}

.introduction {
  width: 90%;
  margin: auto;
}
.introduction .intro {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.content {
  display: -webkit-box;
  font-size: 14px;
  line-height: 20px;
  color: rgba(0, 0, 0, 0.60);
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.bottom {
  box-sizing: border-box;
  position: fixed;
  display: flex;
  justify-content: space-around;
  bottom: 30rpx;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  padding: 20rpx;
}

.bottom .btn {
  box-sizing: border-box;
  width: 310rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 20px;
  color: #fff;
  border-radius: 40rpx;
}
.bottom .go {
  color: rgba(192, 17, 12, 1);
  border: 1px solid rgba(192, 17, 12, 1);
}
.bottom .test {
  background: linear-gradient(to right, rgba(192, 17, 12, 1), rgba(235, 74, 64, 1));
}